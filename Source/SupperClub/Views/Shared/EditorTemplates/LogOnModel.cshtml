@model SupperClub.Models.LogOnModel
@using (Html.BeginForm("LogOn", "Account", new { model = @Model, returnUrl = ViewData["returnUrl"] }, FormMethod.Post, new { id = "loginForm" }))
{
    <div class="pr-">

        <h1 class="type-light mb-">Login</h1>
        <p class="mb h6 semibold color-dark">Please log in to your account to continue</p>


        <div>
            <label>Your Email Address</label>
            @Html.ValidationMessageFor(m => m.UserName)
            @Html.EditorFor(m => m.UserName, new { @class = "input input--large input--primary mb--" })
        </div>


        <div>
            @Html.LabelFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "input input--large input--primary mb-" })
        </div>
        <input type="submit" class="btn btn--primary btn--large btn--h54 large-and-up-float-right mb+" id="btnLogin" value="Login" />


    </div>
}