    <script type="text/javascript">
        
        $(function () {
            $('#btnNewsletterFooter').click(function () {
                var SubscribeEmailAddress = $('#newsletter_emailfooter').val();

                if (SubscribeEmailAddress != '' && SubscribeEmailAddress != null) {
                    ga('create', 'UA-36514914-1', 'auto', { 'alwaysSendReferrer': true });
                    ga('send', 'event', { eventCategory: 'Newsletter', eventAction: 'Signups', eventLabel: 'Footer', eventValue: 1 });
                    _gaq.push(['_setAllowLinker', true]);
                    _gaq.push(['_setDomainName', 'grubclub.com']);
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("subscribe","home")',
                        data: { emailAddress: SubscribeEmailAddress, location: "Footer" },
                        cache: false,
                        dataType: 'json text',
                        traditional: true,
                        success: function (result) {
                            if (result == "true") {
                                @if (bool.Parse(System.Web.Configuration.WebConfigurationManager.AppSettings["UseAppNexusPixel"]))
                                {
                                    <text>
                                    var _script = document.createElement("script");
                                    _script.type = "text/javascript";
                                    _script.src = "https://secure.adnxs.com/px?id=517414&t=1";
                                    $("body").append(_script);
                                    </text>
                                }
                                $('#newsletter_ThankyouFooter').css('display', 'block');
                                $('#newsletter_ErrorFooter').css('display', 'none')
                                $('#newsletter_emailfooter').val("");
                            }
                            else {
                                $('#newsletter_ThankyouFooter').css('display', 'none');
                                $('#newsletter_ErrorFooter').css('display', 'block')
                                //$('#txtSubscribeError').text("Looks like there is a problem with your email address, please try again!");
                                //$('#txtSubscribeError').show();
                            }
                        },
                        error: function () {
                            $('#newsletter_ThankyouFooter').css('display', 'none');
                            $('#newsletter_ErrorFooter').html('There was an error saving the e-mail address - please try again.');
                            $('#newsletter_ErrorFooter').css('display', 'block')
                            //  alert("Could not save email address.");
                        }
                    });
                } else {// alert('There was an error with the newsletter submission - please try again.');
                    $('#newsletter_ThankyouFooter').css('display', 'none');
                    $('#newsletter_ErrorFooter').css('display', 'block')
                }
            });
        });

    </script>
    
    

