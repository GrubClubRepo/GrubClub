@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "An error has occurred";
    try
    {
        string uName = string.IsNullOrEmpty(SupperClub.Code.UserMethods.UserName) ? "Unknown" : SupperClub.Code.UserMethods.UserName;
        SupperClub.Logger.SystemLogging.LogMessageDirect(string.Format("User: {0} - Landed at Error Page. Error Controller: {2}   Error Action: {3}   Error Details: {1}", uName, Model.Exception != null ? Model.Exception.StackTrace : "No exception details available", Model.ControllerName != null ? Model.ControllerName : "Controller Name info not available", Model.ActionName != null ? Model.ActionName : "Action Name info not available"), SupperClub.Logger.LogLevel.FATAL);
    }
    catch
    {
        // Just in case this block of code fails, do nothing so the page still renders
    }
}

<!--  Page Title -->
<div class="pattern-design2">
    <div class="container">
       <p></p>
    </div>
</div>
<!-- Page Title End -->

<!--  960 Container Start -->
<div class="container sub-title2">
    <h2>Uhoh!</h2>
</div>

<div class="container">
	<div class="sixteen columns">
        <p>Eek, it appears we've had a hiccup...</p>
        <p>We're so sorry about this. Please <a href="mailto:@System.Web.Configuration.WebConfigurationManager.AppSettings["DefaultContactEmailAddress"]">Contact Us</a> to let us know and we'll do our best to get this fixed asap. Any details you can provide on what you were doing when the error happened would be very much appreciated!
</p>
        <p>Thank you!</p>
	</div>
</div>