            $("#editUpdate").click(function () {
                if ($("#iEditCurrentNumber").length > 0) {
                    var phone = $("#iEditCurrentNumber").val();
                    if (IsPhoneNumber(phone)) {
                        $.getJSON('@Url.Action("SaveUserContactNumber", "Booking")', { phoneNumber: phone }, function (isSuccess) {
