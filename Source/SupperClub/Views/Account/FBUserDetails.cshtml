@model SupperClub.Models.FacebookUser
@{
    ViewBag.Title = "Email";
}
@section PageSpecificScripts {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/datepicker/jquery-ui-1.8.23.custom.css")" />
    
    <script src="@Url.Content("~/Scripts/old/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/old/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
<!--  Page Title -->
<div class="container pattern-design2">
    <div class="container">
        <p>@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()
            / @ViewBag.Title</p>
    </div>
</div>

<!-- 960 Container Start -->
<div class="container">
    <!-- Space column for centering -->
    <div class="four columns">
        <p>
        </p>
    </div>
    <div class="eight columns">
        <div class="info-box">
            <div class="info-content">
                @if(ViewBag.Notification != null)
                {
                    <br />
                    @Html.Partial("_Notification", (SupperClub.Models.NotificationModel)ViewBag.Notification)
                    TempData["Notification"] = null;                                                                                         
                }

                <h4 class="headline">
                    We need your email address too</h4>
                <p>
                    You can use this to log on if you stop using Facebook</p>
                    <br />
                
                @using (Html.BeginForm("FacebookUserAddEmail", "Account", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.FbAcessToken)

                    <div class="field">
                        @Html.LabelFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email)
                    </div>
                    <input type="submit" value="Update" class="button medium orange" style="float: left" />
                }
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- 960 Container End -->