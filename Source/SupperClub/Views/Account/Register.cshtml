@model SupperClub.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

@section PageSpecificScripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<!-- 960 Container Start -->
<div class="container">
	
    <!-- Space column for centering -->
    <div class="four columns"><p></p></div>

	<!--Info Box Start -->
	<div class="eight columns">
        <div class="info-box">
			<div class="info-content">
				<h4>Sign Up</h4>
                <p>Find real people and really good food near you!</p>
                @if(ViewBag.Notification != null)
                {
                    <br />
                    @Html.Partial("_Notification", (SupperClub.Models.NotificationModel)ViewBag.Notification);
                    TempData["Notification"] = null;
                }
                <br />
                @using (Html.BeginForm())
                {
                    <div>
                        <div class="field">
                            <label>First Name</label>
                            @Html.ValidationMessageFor(m => m.FirstName)
                            @Html.TextBoxFor(m => m.FirstName)
                        </div>
                        <div class="field">
                            <label>Last Name</label>
                            @Html.ValidationMessageFor(m => m.LastName)
                            @Html.TextBoxFor(m => m.LastName)
                        </div>
                        <div class="field">
                            @Html.LabelFor(m => m.Email)
                            @Html.ValidationMessageFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email)
                        </div>
                        <div class="field">
                            @Html.LabelFor(m => m.ConfirmEmail)
                            @Html.ValidationMessageFor(m => m.ConfirmEmail)
                            @Html.TextBoxFor(m => m.ConfirmEmail)
                        </div>
                        <div class="field">
                            @Html.LabelFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password)
                        </div>
                        <div class="field">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.ConfirmPassword)
                        </div>
                        @*<div class="field">
                            @Html.LabelFor(m => m.Gender)
                            @Html.ValidationMessageFor(m => m.Gender)
                            @Html.DropDownList("Gender", (IEnumerable<SelectListItem>)ViewBag.Gender, "Select", new { @class = "custom_select" })
                        </div>*@
                        <input type="submit" value="Create Account" class="button medium orange" style="" />
                        <br /><br />
                        <p>By clicking “Create Account” you confirm that you accept the <a href="@Url.Content("~/Home/TermsAndConditions")">Terms and Conditions</a></p>
                </div>
                }
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</div>
<!-- 960 Container End -->