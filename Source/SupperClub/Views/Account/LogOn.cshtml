@model SupperClub.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

@section PageSpecificScripts {
    <style>
        html {
            width: 100%;
            height: 100%;
            background-image: url("@Url.Content("~/Content/images/SupperClubs/grub club - basement galley.jpg")");
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        body {background: none;}
        p.smallprint {width: 80%; margin: auto;}
    </style>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // Only allow login if scripts enabled
            $('#LoginForm').show();
        });
    </script>
}

<!-- 960 Container Start -->
<div class="container">
	<!-- Space column for centering -->
    <div class="four columns"><p></p></div>
    
    <!--Info Box Start -->
	<div class="eight columns">
        <div class="info-box">
            <noscript>
                <div class="info-content" style="text-align:center; color:Red; font-weight:bold;">
                     <p>
                        WARNING: It looks like your JavaScript is disabled.<br /> For full functionality of this site it is necessary to enable JavaScript before you log on.
                        Here are the <a href="http://www.enable-javascript.com/" target="_blank">instructions</a> how to enable JavaScript in your web browser.
                     </p>
                </div>
            </noscript>

			<div id="LoginForm" class="info-content" style="text-align:center; display:none;">
                <a id="loginLink" href="@Url.Action("FacebookLogin", "Account", new { returnUrl = (Request["returnUrl"] == null ? Model.redirectUrl : Request["returnUrl"]) })">
                    <img src="@Url.Content("~/Content/images/fb-join-medium.png")" alt="" style="margin-left:auto; margin-right:auto; width: 65%" />
                </a>
                
                <p style="text-align:center">- OR -</p>
                <p>&nbsp</p>
				
                                
                @if(ViewBag.Notification != null)
                {
                    <br />
                    @Html.Partial("_Notification", (SupperClub.Models.NotificationModel)ViewBag.Notification)
                    TempData["Notification"] = null;
                }
                
                @using (Html.BeginForm()) {
                    <div style="text-align:center">
                    @Html.HiddenFor(m => m.redirectUrl)
                        <fieldset>
                            <div class="field">
                                <label>Email Address</label>
                                @Html.ValidationMessageFor(m => m.UserName)
                                @Html.TextBoxFor(m => m.UserName, new { style="margin-left:auto; margin-right:auto"})
                            </div>

                            <div class="field">
                                @Html.LabelFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { style = "margin-left:auto; margin-right:auto" })
                            </div>

                            <div class="field check-box-field">
                                @Html.EditorFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </fieldset>
                    </div>
                    
                <input type="submit" value="Log On" class="button medium orange" style="" />
                
                }
                <p>Forgotten your password? @Html.ActionLink("Reset", "ForgotPassword") it <br /></p>
                <p>New to Grubclub? Register below</p>

                <a href="@Url.Action("Register", "Account", new { returnUrl = (Request["returnUrl"] == null ? Model.redirectUrl  : Request["returnUrl"])})" class="button medium button-arrow">
                    Register
                </a>

                
                <p class="smallprint"><small>By clicking “Join with Facebook” you confirm that you accept the <a href="@Url.Content("~/Home/TermsAndConditions")">Terms and Conditions</a></small></p>
                <p>&nbsp</p>
            </div>

			<div class="clearfix"></div>
		</div>
	</div>
    
</div>
<!-- 960 Container End -->