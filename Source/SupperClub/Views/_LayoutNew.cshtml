                    dataType: 'json text',
                    traditional: true,
                    success: function (result) {
                        if (result == "true") {
                            
                            @if (bool.Parse(System.Web.Configuration.WebConfigurationManager.AppSettings["UseAppNexusPixel"]))
                            {
                                <text>
                                var _script = document.createElement("script");
                                _script.type = "text/javascript";
                                _script.src = "https://secure.adnxs.com/px?id=517414&t=1";
                                $("body").append(_script);
                                </text>
                            }
                            $('#newsletter-confirmed').css('display', 'block');
                            $('#newsletter-boxContent').css('display', 'none');
                            ga('create', 'UA-36514914-1', 'auto', { 'alwaysSendReferrer': true});
