                    width: 119px;
                    text-align: left;
                    background: none;
                }

                #navigation ul ul ul {
                    position: absolute;
                    top: -99999px;
                    left: 100%;
                    opacity: 0;
                    margin: -10px 0 0 0px;
                    z-index: 999;
                    border-radius: 3px;
                }

                    #navigation ul ul ul li a {
                    }

            #navigation ul li:hover > ul {
                opacity: 1;
                position: absolute;
                top: 100%;
                left: -5px;
            }

            #navigation ul ul li:hover > ul {
                position: absolute;
                top: 0;
                left: 100%;
                opacity: 1;
                z-index: 497;
                background: #fff border: 0;
            }

            #navigation ul ul li:hover > a {
                border-radius: 2px;
                background: white !important;
                font-weight: normal !important;
            }
    </style>
